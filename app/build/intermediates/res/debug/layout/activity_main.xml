<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/titol_id"
        android:textSize="@dimen/title_text_size"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nom"
        android:id="@+id/nom_id"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/titol_id"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cognom"
        android:id="@+id/cognom_id"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/nom_id"
        />

    <TextView
        style="@style/Titols"
        android:text="@string/sexe_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/sexe_id"
        android:layout_below="@+id/cognom_id"
        />
<RadioGroup
    android:id="@+id/radio_id"
    android:layout_below="@+id/sexe_id"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/home_id"
        android:layout_below="@+id/radio_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dona"
        android:id="@+id/dona_id"
        android:layout_below="@+id/home_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />
</RadioGroup>
    <TextView
        style="@style/Titols"
        android:text="@string/estat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/estat_id"
        android:layout_below="@+id/radio_id"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treballa"
        android:id="@+id/treballa_id"
        android:layout_below="@+id/estat_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudia"
        android:id="@+id/estudia_id"
        android:layout_below="@+id/treballa_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        style="@style/Titols"
        android:text="@string/estudis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/estudis_id"
        android:layout_below="@+id/estudia_id"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudis"
        android:id="@+id/estudis_switch"
        android:layout_below="@+id/estudis_id"
        android:layout_marginTop="5dp"/>

    <TextView
        style="@style/Titols"
        android:text="@string/pes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/pes_id"
        android:layout_below="@+id/estudis_switch"
        />

    <SeekBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slider_pes"
        android:layout_below="@+id/pes_id"
        android:layout_marginTop="5dp"/>
        />

    <TextView
        style="@style/Titols"
        android:text="@string/naixement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/naixement_id"
        android:layout_below="@+id/slider_pes"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:id="@+id/data_id"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/naixement_id"
        />

    <Button
        android:text="@string/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@+id/data_id"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>
